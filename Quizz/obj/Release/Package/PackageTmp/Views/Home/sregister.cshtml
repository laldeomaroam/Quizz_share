@model Quizz.Models.TBL_STUDENT

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>sregister</title>
</head>
<body>

    @if (ViewBag.msg !=null)
    {
        <div class="alert alert-danger">
            <strong>Error !</strong> @ViewBag.msg

        </div>
    }

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8">
                <h2>Student registration form</h2>
                <div class="container">

                    @using (Html.BeginForm("sregister","Home",FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                    <div class="form-group">
                        <label for="email">Email:</label>
                        @*<input type="email" class="form-control" id="email" placeholder="Enter email" name="email">*@
                        @Html.TextBoxFor(x => x.S_NAME, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password:</label>
                        @Html.PasswordFor(x => x.S_PASSWORD, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="image">Photo:</label>
                        <input type="file" class="form-control btn btn-info" id="imgfile" name="imgfile"/>
                    </div>   
                        <input type="submit" value="Register Now !!" class="btn btn-success btn-block" />
                    }

                </div>
            </div>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-4">

            </div>
            

</body>
</html>
