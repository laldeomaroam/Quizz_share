@model Quizz.Models.TBL_STUDENT

@{
    ViewBag.Title = "slogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (ViewBag.msg != null)
{
    <div class="alert alert-danger">
<strong>Error !</strong> @ViewBag.msg
    </div>
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Login as student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="S_NAME">Student username</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.S_NAME, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.S_NAME, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="S_PASSWORD">Student password</label>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.S_PASSWORD, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.S_PASSWORD, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
        
    </div>
}

<div>
    @Html.ActionLink("Register Now", "sregister")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
