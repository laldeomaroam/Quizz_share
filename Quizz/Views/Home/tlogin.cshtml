@model Quizz.Models.TBL_ADMIN

@{
    ViewBag.Title = "tlogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Login as Admin</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2" for="AD_NAME">Administrator username</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.AD_NAME, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AD_NAME, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="AD_PASSWORD">Password</label>
        <div class="col-md-10">
            @Html.PasswordFor(model => model.AD_PASSWORD, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AD_PASSWORD, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Login" class="btn btn-default" />
        </div>
    </div>
    
</div>
}

<div>
   
</div>
<p style="color:red">@ViewBag.msg</p>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
